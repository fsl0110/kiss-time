---
import Connection from "../components/Connection.astro";
const image = "/the-beginning-of-everything.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>KISS time</title>
  </head>
  <body>
    <div>
      <Connection />
    </div>
    <a href="http://kiss-yourself.world" title="live">
      <img src={image} />
    </a>
  </body>
</html>
<style>
  body {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  div {
    position: absolute;
    top: 20px;
    right: 20px;
  }
</style>
